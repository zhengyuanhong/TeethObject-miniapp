.box {
    width: 95%;
    margin: 0rpx auto;
}

.box .name {
    background: white;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
}

.activity_info {
    display: flex;
    background: white;
    margin: 20rpx auto;
    padding: 20rpx;
    border-radius: 10rpx;
    align-items: center;
}

.activity_info .left {
    margin-left: 20rpx;
}

.activity_info .left .activity_name {
    font-weight: bolder;
    font-size: 40rpx;
}

.activity_info .left .juli {
    margin-top: 10rpx;
}

.activity_tag {
    display: flex;
    margin-top: 20rpx;
    flex-wrap: wrap;
}

.edit_btn {
    display: flex;
    margin-top: 20rpx;
    justify-content: space-between;
    padding: 0rpx 30rpx;
}

.edit_btn .btn{
    padding: 10rpx 20rpx;
    width: 200rpx;
    border-radius: 20rpx;
    text-align: center;
    margin: 0 auto;
}

.activity_tag .tag_title {
    font-size: 30rpx;
}

.text-size {
    font-size: 26rpx;
}

.tag {
    border: 1px solid #2bad41;
    color: #2bad41;
    padding: 5rpx 10rpx;
    margin-left: 10rpx;
    border-radius: 20rpx;
}